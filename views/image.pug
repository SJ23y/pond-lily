doctype html
html(lang="en")
  head
    title Image Searcher
    link(rel='stylesheet' href='/app.css')
    
  body
    p Your text must be here:
    mixin image-card(val)
      div.image-card
        a(href= val.snip class="image-header" target="_blank"): h3= val.head
        a(href= val.url class="image-link" target="_blank"): img(src= val.thumb)
            
    
    each part in values
      +image-card(part)